{
    "name": "Python + Playwright",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        },
        "extensions": [
          "ms-python.python",
          "ms-playwright.playwright"
        ]
      }
    },
    "postCreateCommand": "playwright install",
    "remoteUser": "pwuser"
  }
  